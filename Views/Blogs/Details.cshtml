@model Snips.Data.Blog

@{
    ViewData["Title"] = "Details";
}

<h1>
    <a asp-controller="Blogs" asp-action="DetailsById" asp-route-id="@Model.Id">@Model.Name</a>
</h1>

<div class="container">
    <div class="row">
        <div class="card mt-5">
            <div class="card-body">
                <p class="card-text">@Html.Raw(Model.Content)</p>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Blogs" asp-action="Edit" asp-route-id="@Model.Id"
                       class="btn btn-primary float-end ms-2">
                        Edit
                    </a>
                }
                <a asp-controller="Blogs" asp-action="DetailsById" asp-route-id="@Model.Id"
                   class="btn btn-primary float-end ms-2">
                    View
                </a>
            </div>
        </div>
    </div>
</div>